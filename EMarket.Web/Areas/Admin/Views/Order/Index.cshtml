@{
    // Simplified C# logic for clean CSS class output
    var status = Context.Request.Query["status"];
    var inprocess = "";
    var pending = "";
    var completed = "";
    var approved = "";
    var all = "";

    switch (status)
    {
        case "inprocess":
            inprocess = "active-filter";
            break;
        case "pending":
            pending = "active-filter";
            break;
        case "completed":
            completed = "active-filter";
            break;
        case "approved":
            approved = "active-filter";
            break;
        default:
            all = "active-filter";
            break;
    }
}

<style>
    .order-list-container {
        background-color: #2a2a2a;
        border-radius: 15px;
        padding: 2.5rem;
        margin-top: 2rem;
        border: 1px solid rgba(138, 43, 226, 0.1);
    }

    .header-row {
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .list-header {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: #ffffff;
        margin: 0;
    }

    /* Filter Tabs Styling */
    .filter-tabs {
        display: flex;
        gap: 10px;
        border-bottom: 1px solid #343a40;
        margin-bottom: 2rem;
    }

    .filter-tab {
        padding: 0.75rem 1.5rem;
        color: #adb5bd;
        text-decoration: none;
        border-radius: 8px 8px 0 0;
        border: 1px solid transparent;
        border-bottom: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .filter-tab:hover {
            background-color: #1c1c1c;
            color: #ffffff;
        }

        .filter-tab.active-filter {
            background-color: #1c1c1c;
            color: var(--primary-accent);
            border-color: #343a40;
            border-bottom: 2px solid var(--primary-accent);
        }

    /* Custom DataTables Styling */
    #tblData {
        border-collapse: separate !important;
        border-spacing: 0 10px !important;
    }

        #tblData thead th {
            border: none !important;
            color: #adb5bd;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.8rem;
        }

        #tblData tbody tr {
            background-color: #1c1c1c;
            transition: background-color 0.3s ease;
        }

            #tblData tbody tr:hover {
                background-color: #343a40;
            }

        #tblData tbody td {
            border: none !important;
            padding: 1.25rem 1rem !important;
            vertical-align: middle;
            color: #f8f9fa;
        }

            #tblData tbody td:first-child {
                border-top-left-radius: 10px;
                border-bottom-left-radius: 10px;
            }

            #tblData tbody td:last-child {
                border-top-right-radius: 10px;
                border-bottom-right-radius: 10px;
            }

    /* Styling for action buttons (assuming order.js generates them) */
    .action-btn-group .btn {
        margin: 0 5px;
        border-radius: 8px;
        padding: 0.5rem 0.8rem;
    }

    .action-btn-group .btn-primary {
        background-color: rgba(138, 43, 226, 0.2);
        border: 1px solid var(--primary-accent);
        color: var(--primary-accent);
    }

        .action-btn-group .btn-primary:hover {
            background-color: var(--primary-accent);
            color: white;
        }

</style>

<div class="order-list-container shadow-lg">
    <div class="row header-row align-items-center">
        <div class="col-12">
            <h2 class="list-header">Order Management</h2>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="filter-tabs">
        <a class="filter-tab @all" asp-controller="Order" asp-action="Index" asp-route-status="all">All</a>
        <a class="filter-tab @inprocess" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">In Process</a>
        <a class="filter-tab @pending" asp-controller="Order" asp-action="Index" asp-route-status="pending">Payment Pending</a>
        <a class="filter-tab @completed" asp-controller="Order" asp-action="Index" asp-route-status="completed">Completed</a>
        <a class="filter-tab @approved" asp-controller="Order" asp-action="Index" asp-route-status="approved">Approved</a>
    </div>

    <table id="tblData" class="table" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}