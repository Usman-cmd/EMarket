@model ProductVM

<style>
    .product-form-container {
        background-color: #2a2a2a;
        border-radius: 15px;
        padding: 2.5rem;
        margin-top: 2rem;
        border: 1px solid rgba(138, 43, 226, 0.1);
    }

    .form-header-row {
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid #343a40;
    }

    .form-header {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: #ffffff;
        margin: 0;
    }

    .back-to-list-link {
        color: #adb5bd;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .back-to-list-link:hover {
            color: #ffffff;
        }

    .form-label {
        color: #adb5bd;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-input, .form-select, .form-textarea {
        background-color: #1c1c1c !important;
        border: 1px solid #343a40 !important;
        color: #ffffff !important;
        border-radius: 8px !important;
        padding: 0.75rem 1rem !important;
    }

        .form-input:focus, .form-select:focus, .form-textarea:focus {
            border-color: var(--primary-accent) !important;
            box-shadow: 0 0 10px rgba(138, 43, 226, 0.3) !important;
        }

    .form-textarea {
        min-height: 120px;
    }

    .image-preview-box {
        background-color: #1c1c1c;
        border-radius: 10px;
        padding: 1rem;
        text-align: center;
    }

    .image-preview {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: 8px;
    }

    .form-control[type="file"] {
        background-color: transparent;
        border: none;
    }

        .form-control[type="file"]::-webkit-file-upload-button {
            background: #343a40;
            color: #f8f9fa;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

            .form-control[type="file"]::-webkit-file-upload-button:hover {
                background: var(--primary-accent);
            }

    .action-btn {
        background: linear-gradient(90deg, #8A2BE2, #6A5ACD);
        border: none;
        font-weight: 700;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem;
        text-transform: uppercase;
    }

        .action-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
        }

    .secondary-btn {
        background-color: transparent;
        border: 1px solid #495057;
        color: #adb5bd;
    }

        .secondary-btn:hover {
            background-color: #343a40;
            border-color: #495057;
            color: #ffffff;
        }
</style>

<div class="product-form-container shadow-lg">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Product.Id" hidden />
        <input asp-for="Product.ImageUrl" hidden />

        <!-- Header -->
        <div class="row form-header-row align-items-center">
            <div class="col-6">
                <h2 class="form-header">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Index" class="back-to-list-link">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>

        <div class="row gx-5">
            <!-- Left Column: Product Details -->
            <div class="col-lg-8">
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Product.Title" class="form-label"></label>
                        <input asp-for="Product.Title" class="form-control form-input" />
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Product.Description" class="form-label"></label>
                        <textarea asp-for="Product.Description" class="form-control form-textarea"></textarea>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Product.ModelNumber" class="form-label"></label>
                        <input asp-for="Product.ModelNumber" class="form-control form-input" />
                        <span asp-validation-for="Product.ModelNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Product.Brand" class="form-label"></label>
                        <input asp-for="Product.Brand" class="form-control form-input" />
                        <span asp-validation-for="Product.Brand" class="text-danger"></span>
                    </div>

                    <h5 class="text-white-50 mt-4">Pricing</h5>
                    <div class="col-md-3 col-6">
                        <label asp-for="Product.ListPrice" class="form-label"></label>
                        <input asp-for="Product.ListPrice" class="form-control form-input" />
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="Product.Price" class="form-label">Price (1-50)</label>
                        <input asp-for="Product.Price" class="form-control form-input" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="Product.Price50" class="form-label">Price (51-100)</label>
                        <input asp-for="Product.Price50" class="form-control form-input" />
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="Product.Price100" class="form-label">Price (100+)</label>
                        <input asp-for="Product.Price100" class="form-control form-input" />
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Right Column: Image & Category -->
            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="mb-3">
                    <label asp-for="Product.CategoryId" class="form-label"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select form-select">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="image-preview-box">
                    <img src="@Model.Product.ImageUrl" class="image-preview mb-3" id="imagePreview" />
                    <label class="form-label w-100">Product Image</label>
                    <input type="file" name="file" class="form-control" onchange="document.getElementById('imagePreview').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-4 pt-4 border-top border-secondary">
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary action-btn w-100">@(Model.Product.Id != 0 ? "Update" : "Create")</button>
            </div>
            <div class="col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn secondary-btn w-100">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


