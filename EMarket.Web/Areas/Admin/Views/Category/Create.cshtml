@model Category

<style>
    .category-form-container {
        max-width: 700px; /* Constrain width for better readability on large screens */
        margin: 4rem auto;
        background-color: #2a2a2a;
        border-radius: 15px;
        padding: 2.5rem;
        border: 1px solid rgba(138, 43, 226, 0.1);
    }

    .form-header-row {
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid #343a40;
    }

    .form-header {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: #ffffff;
        margin: 0;
    }

    .back-to-list-link {
        color: #adb5bd;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .back-to-list-link:hover {
            color: #ffffff;
        }

    .form-label {
        color: #adb5bd;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-input {
        background-color: #1c1c1c !important;
        border: 1px solid #343a40 !important;
        color: #ffffff !important;
        border-radius: 8px !important;
        padding: 0.75rem 1rem !important;
    }

        .form-input:focus {
            border-color: var(--primary-accent) !important;
            box-shadow: 0 0 10px rgba(138, 43, 226, 0.3) !important;
        }

    .action-btn {
        background: linear-gradient(90deg, #8A2BE2, #6A5ACD);
        border: none;
        font-weight: 700;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem;
        text-transform: uppercase;
    }

        .action-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
        }

    .secondary-btn {
        background-color: transparent;
        border: 1px solid #495057;
        color: #adb5bd;
    }

        .secondary-btn:hover {
            background-color: #343a40;
            border-color: #495057;
            color: #ffffff;
        }
</style>

<div class="category-form-container shadow-lg">
    <form method="post">
        <!-- Header -->
        <div class="row form-header-row align-items-center">
            <div class="col-6">
                <h2 class="form-header">Create Category</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="back-to-list-link">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>

        <div class="row g-4">
            <!-- Form Fields -->
            <div class="col-12">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" class="form-control form-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control form-input" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-4 pt-4 border-top border-secondary">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary action-btn w-100">Create</button>
            </div>
            <div class="col-md-6 mt-2 mt-md-0">
                <a asp-controller="Category" asp-action="Index" class="btn secondary-btn w-100">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}