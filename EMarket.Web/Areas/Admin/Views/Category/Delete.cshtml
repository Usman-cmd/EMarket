@model Category

<style>
    .category-delete-container {
        max-width: 700px;
        margin: 4rem auto;
        background-color: #2a2a2a;
        border-radius: 15px;
        padding: 2.5rem;
        border: 1px solid #dc3545; /* Red border to signify danger */
        box-shadow: 0 0 20px rgba(220, 53, 69, 0.2);
    }

    .form-header-row {
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #495057;
    }

    .form-header {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: #ffffff;
        margin: 0;
    }

    .warning-text {
        color: #ffc107; /* Amber/yellow for warning */
        margin-bottom: 2rem;
        font-weight: 500;
    }

    .form-label {
        color: #6c757d;
        font-weight: 500;
    }

    .form-input-disabled {
        background-color: #1c1c1c !important;
        border: 1px solid #343a40 !important;
        color: #6c757d !important; /* Muted text color */
        border-radius: 8px !important;
        padding: 0.75rem 1rem !important;
        cursor: not-allowed;
    }

    .delete-btn {
        background-color: #dc3545;
        border: 1px solid #dc3545;
        color: #ffffff;
        font-weight: 700;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem;
        text-transform: uppercase;
    }

        .delete-btn:hover {
            background-color: #c82333;
            border-color: #bd2130;
            box-shadow: 0 0 20px rgba(220, 53, 69, 0.5);
        }

    .secondary-btn {
        background-color: transparent;
        border: 1px solid #495057;
        color: #adb5bd;
    }

        .secondary-btn:hover {
            background-color: #343a40;
            border-color: #495057;
            color: #ffffff;
        }
</style>

<div class="category-delete-container">
    <form method="post">
        <input asp-for="Id" hidden />

        <!-- Header -->
        <div class="row form-header-row align-items-center">
            <div class="col">
                <h2 class="form-header d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-3" style="color: #ffc107;"></i>
                    Delete Category
                </h2>
            </div>
        </div>

        <p class="warning-text">
            Are you sure you want to permanently delete this category? This action cannot be undone.
        </p>

        <div class="row g-4">
            <!-- Read-only Fields -->
            <div class="col-12">
                <label class="form-label">Category Name</label>
                <input asp-for="Name" disabled class="form-control form-input-disabled" />
            </div>
            <div class="col-12">
                <label class="form-label">Display Order</label>
                <input asp-for="DisplayOrder" disabled class="form-control form-input-disabled" />
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-4 pt-4 border-top border-secondary">
            <div class="col-md-6">
                <button type="submit" class="btn btn-danger delete-btn w-100">Delete Permanently</button>
            </div>
            <div class="col-md-6 mt-2 mt-md-0">
                <a asp-controller="Category" asp-action="Index" class="btn secondary-btn w-100">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>