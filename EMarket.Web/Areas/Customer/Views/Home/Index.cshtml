@model IEnumerable<Product>

<style>
    /* PAGE HEADER STYLES */
    .page-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 3.5rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.75rem;
    }

    .page-subtitle {
        font-size: 1.2rem;
        color: #adb5bd;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.7;
    }

    /* PRODUCT CARD STYLES (Your existing beautiful styles) */
    .product-card {
        background-color: #2a2a2a;
        border: 1px solid rgba(138, 43, 226, 0.1);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        transform: translateY(0);
    }

        .product-card:hover {
            transform: translateY(-10px);
            border: 1px solid rgba(138, 43, 226, 0.4);
            box-shadow: 0 20px 30px rgba(0, 0, 0, 0.3);
        }

        .product-card .card-img-top {
            border-radius: 15px 15px 0 0;
            aspect-ratio: 1 / 1;
            object-fit: cover;
        }

        .product-card .card-body {
            padding: 1.5rem;
        }

        .product-card .card-title {
            font-family: 'Quicksand', sans-serif;
            font-weight: 700;
            font-size: 1.2rem;
            color: #f8f9fa;
            min-height: 58px;
        }

        .product-card .card-brand {
            font-family: 'Quicksand', sans-serif;
            font-weight: 500;
            color: #adb5bd;
            font-size: 0.9rem;
        }

    .price-section .list-price {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .price-section .current-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-accent);
    }

    .details-btn {
        background: linear-gradient(90deg, #8A2BE2, #6A5ACD);
        border: none;
        font-weight: 500;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem;
    }

        .details-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(138, 43, 226, 0.5);
        }
</style>

<div class="container my-5">

    <!-- PAGE INTRODUCTION (INTEGRATED) -->
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="page-title">Curated for the Innovator</h1>
            <p class="page-subtitle">
                Welcome to EMarket, where cutting-edge technology meets minimalist design. Explore our collection of premium components and peripherals, hand-picked for performance and aesthetics.
            </p>
        </div>
    </div>

    <!-- PRODUCT SHOWCASE -->
    <div class="row gx-4 gy-5">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 d-flex align-items-stretch">
                <div class="product-card w-100 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">@product.Title</h5>
                        <p class="card-brand text-center mb-4">Brand: <b>@product.Brand</b></p>

                        <div class="price-section text-center mt-auto">
                            <p class="list-price mb-1">
                                MSRP: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                            </p>
                            <p class="current-price mb-4">
                                @product.Price100.ToString("c")
                            </p>
                        </div>

                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary details-btn w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>