@model ShoppingCart

<style>
    .details-container {
        background-color: #2a2a2a; /* Consistent with product cards */
        border-radius: 15px;
        border: 1px solid rgba(138, 43, 226, 0.1);
        overflow: hidden;
    }

    .product-image-container {
        padding: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image {
        max-width: 100%;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    }

    .product-info-container {
        padding: 2.5rem;
    }

    .product-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 3rem;
        font-weight: 700;
        color: #ffffff;
        line-height: 1.2;
    }

    .product-author {
        font-family: 'Quicksand', sans-serif;
        font-size: 1.2rem;
        color: #adb5bd;
        margin-bottom: 1.5rem;
    }

    .category-badge {
        background-color: rgba(138, 43, 226, 0.1);
        color: var(--primary-accent);
        border: 1px solid var(--primary-accent);
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .product-description {
        color: #ced4da;
        line-height: 1.7;
        margin: 2rem 0;
    }

    .price-display {
        background-color: #1c1c1c;
        border-radius: 10px;
        padding: 1.5rem;
        margin: 2rem 0;
    }

        .price-display .list-price {
            color: #6c757d;
            font-size: 1rem;
        }

        .price-display .current-price {
            color: var(--primary-accent);
            font-size: 2.5rem;
            font-weight: 700;
        }

    .quantity-input {
        background-color: #1c1c1c;
        border: 1px solid #343a40;
        color: #ffffff;
        border-radius: 8px;
        text-align: center;
    }

        .quantity-input:focus {
            background-color: #1c1c1c;
            color: #ffffff;
            border-color: var(--primary-accent);
            box-shadow: 0 0 10px rgba(138, 43, 226, 0.3);
        }

    .add-to-cart-btn {
        background: linear-gradient(90deg, #8A2BE2, #6A5ACD);
        border: none;
        font-weight: 700;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.75rem;
        text-transform: uppercase;
    }

        .add-to-cart-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
        }

    .back-btn {
        color: #adb5bd;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .back-btn:hover {
            color: #ffffff;
        }
</style>

<form method="post">
    <input hidden asp-for="ProductId" />

    <div class="my-4">
        <a asp-action="Index" class="back-btn fw-semibold">
            <i class="bi bi-arrow-left me-2"></i>Back to Products
        </a>
    </div>

    <div class="details-container shadow-lg">
        <div class="row g-0">
            <!-- Left Column: Product Image -->
            <div class="col-lg-5 product-image-container">
                <img src="@Model.Product.ImageUrl" class="product-image" alt="@Model.Product.Title" />
            </div>

            <!-- Right Column: Product Information -->
            <div class="col-lg-7 product-info-container">
                <div class="mb-3">
                    <span class="badge category-badge">@Model.Product.Category.Name</span>
                </div>

                <h1 class="product-title">@Model.Product.Title</h1>
                <p class="product-author">by @Model.Product.Brand</p>
                <p class="text-muted small">ISBN: @Model.Product.ModelNumber</p>

                <div class="product-description">
                    @Html.Raw(Model.Product.Description)
                </div>

                <div class="price-display d-flex justify-content-between align-items-center">
                    <div>
                        <p class="list-price mb-0">
                            <span class="text-decoration-line-through">@Model.Product.ListPrice.ToString("c")</span>
                        </p>
                        <p class="current-price mb-0">
                            @Model.Product.Price100.ToString("c")
                        </p>
                    </div>
                    <div class="text-end text-white-50 small">
                        Price for 100+ units
                    </div>
                </div>

                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-secondary text-white-50">Quantity</span>
                            <input asp-for="Count" type="number" value="1" class="form-control quantity-input" />
                        </div>
                    </div>
                    <div class="col-md-8 mt-3 mt-md-0">
                        <button type="submit" class="btn btn-primary add-to-cart-btn w-100 py-3">
                            <i class="bi bi-cart-plus-fill me-2"></i>Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>