@page
@model LoginModel

<style>
    .auth-container {
        max-width: 500px; /* Narrower for a focused login form */
        margin: 4rem auto;
        background-color: #2a2a2a;
        border-radius: 15px;
        padding: 2.5rem 3rem;
        border: 1px solid rgba(138, 43, 226, 0.1);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .auth-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.8rem;
        color: #ffffff;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #adb5bd;
    }

        .auth-subtitle a {
            color: var(--primary-accent);
            text-decoration: none;
            font-weight: 500;
        }

    .form-label {
        color: #adb5bd;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-input {
        background-color: #1c1c1c !important;
        border: 1px solid #343a40 !important;
        color: #ffffff !important;
        border-radius: 8px !important;
        padding: 0.75rem 1rem !important;
    }

        .form-input:focus {
            border-color: var(--primary-accent) !important;
            box-shadow: 0 0 10px rgba(138, 43, 226, 0.3) !important;
        }

    .form-check-input {
        background-color: #1c1c1c;
        border-color: #343a40;
    }

        .form-check-input:checked {
            background-color: var(--primary-accent);
            border-color: var(--primary-accent);
        }

    .action-btn {
        background: linear-gradient(90deg, #8A2BE2, #6A5ACD);
        border: none;
        font-weight: 700;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        padding: 0.8rem;
        text-transform: uppercase;
        font-size: 1rem;
    }

        .action-btn:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
        }

    .link-group {
        text-align: center;
        margin-top: 1.5rem;
    }

        .link-group a {
            color: #6c757d;
            font-size: 0.9rem;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .link-group a:hover {
                color: var(--primary-accent);
            }

    .divider-text {
        position: relative;
        text-align: center;
        margin-top: 15px;
        margin-bottom: 15px;
        color: #6c757d;
    }

        .divider-text span {
            padding: 7px;
            font-size: 12px;
            position: relative;
            z-index: 2;
        }

        .divider-text:after {
            content: "";
            position: absolute;
            width: 100%;
            border-bottom: 1px solid #343a40;
            top: 55%;
            left: 0;
            z-index: 1;
        }
</style>

<div class="auth-container shadow-lg">
    <div class="auth-header">
        <h2 class="auth-title">Welcome Back</h2>
        <p class="auth-subtitle">
            New to EMarket? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
        </p>
    </div>

    <section>
        <form id="account" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="col-12">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control form-input" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control form-input" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label text-white-50">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="small text-white-50" style="text-decoration: none;">Forgot password?</a>
                </div>
            </div>

            <div class="col-12 mt-4">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary action-btn">Sign In</button>
            </div>
        </form>
    </section>

    <section class="mt-4">
        <div class="divider-text"><span>OR</span></div>
        <p class="text-center text-white-50">Sign in with another service</p>
        @{
            if ((Model.ExternalLogins?.Count ?? 0) != 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <i class="bi bi-google me-2"></i> @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        }
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}